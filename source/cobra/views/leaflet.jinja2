<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Leaflet</title>
		<script type="text/javascript" src="../lib/d3.v5.min.js"></script>
        <!-- <link rel="stylesheet" href="linecharts.css"> -->

        <!-- Leaflet's CSS -->
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css"
        integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
        crossorigin=""/>
        <!-- Make sure you put this AFTER Leaflet's CSS -->
        <script src="https://unpkg.com/leaflet@1.5.1/dist/leaflet.js"
        integrity="sha512-GffPMF3RvMeYyc1LWMHtK8EbPv0iNZ8/oTtHPx9/cc2ILxQ+u905qIwdpULaqDkyBKgOaB57QTMg7ztg8Jm2Og=="
        crossorigin=""></script>
        <style>
            #mapid { height: 800px; width: 1080px; }
        </style>
	</head>

	<body>
        <div id="mapid"></div>

		<script>
            // define map
            //var mymap = L.map('mapid').setView([51.505, -0.09], 13);
						var mymap = L.map('mapid').setView([34.0522, -118.2437], 14);
            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoiaHZhbjYiLCJhIjoiY2sxdHRvOGhtMDMwYTNjbzYxbWwxZG9payJ9.E0yUH_2HcZQVPHwJsBNCow', {
	            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
                maxZoom: 18,
                id: 'mapbox.streets',
                accessToken: 'your.mapbox.access.token'
            }).addTo(mymap);

            // add marker at center
            var marker = L.marker([34.0522, -118.2437]).addTo(mymap);

            // add circle
            var circle = L.circle([34.0422, -118.23], {
                color: 'red',
                fillColor: '#f03',
                fillOpacity: 0.5,
                radius: 300
            }).addTo(mymap);

						// add circle
            var circle = L.circle([34.0622, -118.25], {
                color: 'blue',
                fillColor: 'blue',
                fillOpacity: 0.5,
                radius: 300
            }).addTo(mymap);

        </script>
    </body>
</html>
